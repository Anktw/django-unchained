ALLOWED_HOSTS="127.0.0.1,127.0.0.1:8000,localhost,localhost:8000"
CORS_ORIGIN_ALLOW_ALL=False
CORS_ORIGIN_WHITELIST=https://localhost:8000
DEBUG=True
SECRET_KEY="your_secret_key"

# Database
POSTGRES_URL=postgresql://postgres:password@localhost:5432/db_name
